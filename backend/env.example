# Environment Configuration Template

# Database Configuration
DATABASE_URL=postgresql://gateway_user:gateway_password@localhost:5432/blockchain_gateway
DATABASE_URL_ASYNC=postgresql+asyncpg://gateway_user:gateway_password@localhost:5432/blockchain_gateway

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Blockchain Gateway Backend
VERSION=3.0.0
DEBUG=True

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Gateway Integration
GATEWAY_URL=http://localhost:3001
GATEWAY_TIMEOUT=30

# Fabric CA Configuration
FABRIC_CA_URL=http://localhost:7054
FABRIC_CA_ADMIN_USERNAME=admin
FABRIC_CA_ADMIN_PASSWORD=adminpw
FABRIC_CA_TLS_ENABLED=False

# Chaincode Deployment Configuration (implements mainflow.md)
# Auto-approve chaincode after successful validation (section 5.4)
AUTO_APPROVE_CHAINCODE=false

# Maximum retry attempts for gateway operations (section 8)
MAX_DEPLOYMENT_RETRIES=3

# Auto-join channel when membership check fails (section 8)
AUTO_JOIN_CHANNEL=true

# Enable sandbox validation for chaincode security (section 9)
SANDBOX_ENABLED=true

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIRECTORY=./uploads
ALLOWED_EXTENSIONS=.go,.java,.js,.ts

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/backend.log

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Email Configuration (Optional)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@blockchain.com
EMAILS_FROM_NAME="Blockchain Gateway"

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
