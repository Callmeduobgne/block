{
  "name": "blockchain-fabric-gateway",
  "version": "1.0.0",
  "description": "Fabric Gateway Service for Blockchain Core Network",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "build": "npm run lint && npm run test",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "deploy": "docker build -t blockchain-fabric-gateway ."
  },
  "keywords": [
    "blockchain",
    "hyperledger",
    "fabric",
    "gateway",
    "nodejs"
  ],
  "author": "Blockchain Team",
  "license": "Apache-2.0",
  "dependencies": {
    "express": "^4.18.2",
    "fabric-network": "^2.2.19",
    "fabric-ca-client": "^2.2.19",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
